<div class="row">
  <div class="col-sm-12 col-md-12 col-xs-12">
    <% Article.all.each do |article| %>
        <div class="thumbnail">


          <% if article.cover? %>
              <img src="<%= article.cover %>" alt="...">
          <% end %>
          <div class="caption">
            <h3><%= article.title %>
              <small><%= article.subject %> </small>
            </h3>
            <p><%=  article.content %></p>

            <p class="text-right"><a href="#" class="btn btn-primary" role="button">阅读全部</a></p>
          </div>
          <div class="panel-footer">
            <% article.tags.each do |tag| %>
                <a href=""><%=tag.name%></a>
            <% end%>

          </div>
        </div>

    <% end %>
  </div>
</div>