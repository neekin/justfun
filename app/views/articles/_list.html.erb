<div class="row">
  <div class="col-sm-12 col-md-12 col-xs-12">
    <% Article.all.each do |article| %>
        <div class="thumbnail">


          <% if article.cover? %>
              <img src="<%= article.cover %>" alt="...">
          <% end %>
          <div class="caption">
            <h3><%= article.title %>
              <small><%= article.subject %> </small>
            </h3>
            <p><%= raw article.content %></p>

            <p class="text-right"><a href="#" class="btn btn-primary" role="button">阅读全部</a></p>
          </div>
          <div class="panel-footer">
            TAGS:  <%= raw article.tags.map(&:name).map{|t| link_to t,tag_path(t)}.join(", ") %>
          </div>
        </div>

    <% end %>
  </div>
</div>