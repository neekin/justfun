
<div class="col-md-9 col-sm-7">
<p id="notice"><%= notice %></p>

<h1>文章管理</h1>

<table class="table">
  <thead>
    <tr>
      <th>标题</th>
      <th>副标题</th>
      <th>作者</th>
      <th>内容</th>
      <th>类型</th>
      <th>封面</th>
      <th>标签</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.subject %></td>
        <td><%= article.content %></td>
        <td><%= article.user.username %></td>
        <td><%= article.articletype.name %></td>
        <td><%= image_tag article.cover_url(:small) || 'no' if article.cover? %> </td>
        <td><%= article.tag_list %></td>
        <td><%= link_to '预览', article %></td>
        <td><%= link_to '编辑', edit_article_path(article) %></td>
        <td><%= link_to '删除', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加新文章', new_article_path %>
</div>